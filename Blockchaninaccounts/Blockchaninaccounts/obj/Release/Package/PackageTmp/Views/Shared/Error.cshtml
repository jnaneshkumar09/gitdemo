@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}




<div class="wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card m-b-20">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">Error</h4>
                        @*<p class="text-muted m-b-30 font-14">Please check your email to reset your password.</p>*@

                        @*<div class="alert alert-danger" role="alert">
                            <strong>Sorry!</strong> An error occurred while processing your request.<br />
                            @ViewBag.errorMessage
                        </div>*@

                        @{
                            if (String.IsNullOrEmpty(ViewBag.errorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <strong>Sorry!</strong> An error occurred while processing your request.<br />
                                   
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger" role="alert">
                                    @*<strong>Sorry!</strong> An error occurred while processing your request.<br />*@
                                    @ViewBag.errorMessage
                                </div>
                            }
                        }


                    </div>
                </div>
            </div> <!-- end col -->
        </div> <!-- end row -->
    </div> <!-- end container -->
</div>