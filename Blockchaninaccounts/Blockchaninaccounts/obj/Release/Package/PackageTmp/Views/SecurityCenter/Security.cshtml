<script type="text/javascript">
        function GetDynamicTextBox(value) {
            var div = $("<div />").attr("class", "input-group bootstrap-touchspin col-sm-8");

            var textBox = $("<input />").attr("type", "textbox").attr("name", "DynamicTextBox").attr("class", "form-control").attr("placeholder", "").attr("data-mask", "999.999.9");
            textBox.val(value);
            div.append(textBox);
            var br=$("<br/>");

            div.append(br);

            var span = $("<span/>").attr("class", "input-group-btn");


            var button = $("<input />").attr("type", "button").attr("value", "Remove").attr("class", "btn btn-secondary w-md waves-effect waves-light");
            button.attr("onclick", "RemoveTextBox(this)");

            span.append(button);

            div.append(span);

            return div;
        }
        function AddTextBox() {
            var div = GetDynamicTextBox("");
            $("#TextBoxContainer").append(div);
        }

        function RemoveTextBox(button) {
            debugger;
           // $(button).parent().remove();
            $(button).parent().offsetParent().remove();
        }

        $(function () {
            var values = eval('@Html.Raw(ViewBag.Values)');
            if (values != null) {
                $("#TextBoxContainer").html("");
                $(values).each(function () {
                    $("#TextBoxContainer").append(GetDynamicTextBox(this));
                });
            }
        });
</script>
